<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">
    
    <bean id = "pointA" class = "springpractice.Point">
        <qualifier value = "circleRelated"/>
        <property name = "x" value = "0"></property>
        <property name = "y" value = "0"></property>
    </bean>
    
    <bean id = "pointB" class = "springpractice.Point">
        <property name = "x" value = "-20"></property>
        <property name = "y" value = "0"></property>
    </bean>
    
    <bean id = "pointC" class = "springpractice.Point">
        <property name = "x" value = "20"></property>
        <property name = "y" value = "0"></property>
    </bean>
    
    <bean id = "Circle" class = "springpractice.Circle"></bean>
    
    <bean id = "messageSource" class = "org.springframework.context.support.ResourceBundleMessageSource">
        <property name = "basenames">
            <list>
                <value>messages</value>
            </list>
        </property>
    </bean>
    
    <context:component-scan base-package="springpractice"></context:component-scan>
    
    <context:annotation-config/>
</beans>